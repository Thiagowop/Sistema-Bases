# Configurações do banco de dados SQL Server

# Instância STD2016
MSSQL_SERVER_STD=192.168.1.8\STD2016
MSSQL_DATABASE_STD=Candiotto_std
MSSQL_USER_STD=seu_usuario
MSSQL_PASSWORD_STD=sua_senha

# Instância CANDIOTTO
MSSQL_SERVER_CANDIOTTO=192.168.1.8\CANDIOTTO
MSSQL_DATABASE_CANDIOTTO=Autojur
MSSQL_USER_CANDIOTTO=seu_usuario
MSSQL_PASSWORD_CANDIOTTO=sua_senha

# Configurações de conexão
CONNECTION_TIMEOUT=30
COMMAND_TIMEOUT=300

# Configurações de e-mail Gmail
EMAIL_USER=seu_email@exemplo.com.br
EMAIL_APP_PASSWORD=sua_senha_app_gmail

# Configurações de automação de e-mail
IMAP_SERVER=imap.gmail.com
EMAIL_SENDER=noreply@exemplo.com.br
EMAIL_SUBJECT_KEYWORD=Candiotto
ATTACHMENT_FILENAME=candiotto.zip

EMCCAMP_API_URL=https://totvs.emccamp.com.br:8051/api/framework/v1/consultaSQLServer/RealizaConsulta/CANDIOTTO.001/0/X
EMCCAMP_API_USER=seu_usuario_api
EMCCAMP_API_PASSWORD=sua_senha_api

# API para baixas EMCCAMP (usa endpoint diferente CANDIOTTO.002)
TOTVS_BASE_URL=https://totvs.emccamp.com.br:8051
TOTVS_USER=seu_usuario_api
TOTVS_PASS=sua_senha_api

# Filtros de data de vencimento para extração de dados
# DATA_VENCIMENTO_INICIAL: obrigatória (define a partir de quando buscar)
# DATA_VENCIMENTO_FINAL: se não definida, usa 2099-12-31 automaticamente (busca tudo)
EMCCAMP_DATA_VENCIMENTO_INICIAL=2020-01-01
# Use AUTO para aplicar aging hoje-6 ou informe uma data final fixa
EMCCAMP_DATA_VENCIMENTO_FINAL=AUTO
MAX_DATA_VENCIMENTO_INICIAL=2020-01-01
MAX_DATA_VENCIMENTO_FINAL=2025-12-31
